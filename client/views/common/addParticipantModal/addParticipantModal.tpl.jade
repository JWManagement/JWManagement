#addParticipantModal.modal.inmodal(tabindex='-1' aria-hidden='true')
	.modal-dialog.modal-sm.animated.fadeInUp
		.modal-content
			.modal-header
				i.fa.fa-user-plus.modal-icon
				h2.m-b-none {{_ 'modal.addParticipant.title'}}
			.modal-body
				if isProjectShiftAdmin
					p.text-muted {{_ 'modal.addParticipant.description'}}
					select.form-control#other-users
						option(selected disabled) {{_ 'modal.addParticipant.select'}}
						each getUsers
							option(value="{{_id}}")
								| {{firstname}} {{lastname}}
								if available
									| (available)
								else if shortTerm
									| (callable in short term)
				else
					h2.center-align {{_ 'role.noPermission'}}
			.modal-footer
				if isProjectShiftAdmin
					if queryParam 'participantId'
						button#submit.btn.btn-primary.pull-left(data-dismiss='modal') {{_ 'modal.addParticipant.submit'}}
					else
						.btn.btn-primary.pull-left.disabled {{_ 'modal.addParticipant.submit'}}
				button#close.btn.btn-white(data-dismiss='modal') {{_ 'modal.close'}}
